CREATE TRIGGER update_imbds
AFTER INSERT ON Peliculas
FOR EACH ROW
BEGIN
    IF NEW.Nacionalidad = 'Spain' THEN
        INSERT INTO Spain (IMBds) VALUES (NEW.IMBd);
    ELSEIF NEW.Nacionalidad = 'USA' THEN
        INSERT INTO USA (IMBds) VALUES (NEW.IMBd);
    ELSEIF NEW.Nacionalidad = 'England' THEN
        INSERT INTO England (IMBds) VALUES (NEW.IMBd);
    ELSEIF NEW.Nacionalidad = 'Mexico' THEN
        INSERT INTO Mexico (IMBds) VALUES (NEW.IMBd);
    END IF;
END;
